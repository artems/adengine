#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk

export DH_VERBOSE=1

WWWDIR=usr/local/nodejs/
PRJDIR=$(WWWDIR)$(DEB_SOURCE_PACKAGE)/
DEB_WWW_DESTDIR=debian/$(DEB_SOURCE_PACKAGE)/$(PRJDIR)

install/$(DEB_SOURCE_PACKAGE)::
	mkdir -p $(DEB_WWW_DESTDIR)

	cp -r `ls -I debian` $(DEB_PRJWWW_DESTDIR)

	rm -rf $(DEB_PRJWWW_DESTDIR).git
	rm -rf $(DEB_PRJWWW_DESTDIR)test
	rm -rf $(DEB_PRJWWW_DESTDIR)spec
	rm -rf $(DEB_PRJWWW_DESTDIR)schema
	rm -rf $(DEB_PRJWWW_DESTDIR)doc
	rm -rf $(DEB_PRJWWW_DESTDIR)db
	rm -f  $(DEB_PRJWWW_DESTDIR)Makefile
	rm -f  $(DEB_PRJWWW_DESTDIR).gitignore
